# StyleWeather App Environment Variables
# 이 파일을 .env로 복사한 후 실제 API 키를 입력하세요

# OpenWeatherMap API Key
# https://openweathermap.org/api 에서 발급받으세요
EXPO_PUBLIC_OPENWEATHER_API_KEY=your_openweather_api_key_here

# OpenAI API Key  
# https://platform.openai.com/api-keys 에서 발급받으세요
EXPO_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Supabase 설정
# https://supabase.com 에서 프로젝트 생성 후 키를 입력하세요
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Cloud Configuration (Optional - for image upload)
EXPO_PUBLIC_GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# Social Media API Keys (Optional - for sharing)
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id_here
EXPO_PUBLIC_TWITTER_API_KEY=your_twitter_api_key_here
EXPO_PUBLIC_INSTAGRAM_CLIENT_ID=your_instagram_client_id_here

# Analytics (Optional)
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# App Configuration
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_API_TIMEOUT=10000
EXPO_PUBLIC_CACHE_DURATION=600000